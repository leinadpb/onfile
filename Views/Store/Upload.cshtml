@model UploadViewModel
@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="upload-box">
    <div class="up-content" align="center">
        <div class="title">
            <h2>Upload a file</h2>
        </div>
        <div class="description">
            <p>Upload, then get some money.</p>
        </div>
    </div>
    <div class="form-content">
        <form method="post" asp-controller="Store" asp-action="Upload">
            <div class="container-fluid">
                <div class="row">
                    <div class="col"></div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ResourceUrl"></label>
                            <input asp-for="ResourceUrl" type="file" class="form-control" />
                            <span asp-validation-for="ResourceUrl" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col"></div>
                </div>
            </div>
        </form>
    </div>
</div>

